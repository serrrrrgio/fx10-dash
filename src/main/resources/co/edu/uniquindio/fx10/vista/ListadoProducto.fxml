<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.fx10.controlador.ListadoProductoController"
      VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>
    <Label text="Lista de Productos" style="-fx-text-fill: #34495e; -fx-font-size: 16px; -fx-font-weight: bold;">
        <VBox.margin>
            <Insets bottom="10"/>
        </VBox.margin>
    </Label>
    <TableView fx:id="tablaProductos" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colCodigo" text="Código" prefWidth="100"/>
            <TableColumn fx:id="colNombre" text="Nombre" prefWidth="200"/>
            <TableColumn fx:id="colDescripcion" text="Descripción" prefWidth="280"/>
            <TableColumn fx:id="colPrecio" text="Precio" prefWidth="120"/>
            <TableColumn fx:id="colStock" text="Stock" prefWidth="100"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <VBox.margin>
            <Insets top="15"/>
        </VBox.margin>
        <Button text="Volver" onAction="#onVolver"/>
        <HBox HBox.hgrow="ALWAYS"/>
        <Button fx:id="btnEliminar" text="Eliminar Producto" onAction="#onEliminarProducto"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 16; -fx-cursor: hand; -fx-background-radius: 5;"/>
    </HBox>
</VBox>
