<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="mainContainer" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.fx10.controller.DashboardController"
      spacing="20">
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label fx:id="lblTitle" text="Dashboard de Productos" styleClass="title-label">
            <font>
                <Font name="System Bold" size="28"/>
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS"/>
    </HBox>
    <VBox fx:id="viewContainer" VBox.vgrow="ALWAYS" alignment="CENTER" spacing="20">
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="btnViewProductList" text="Ver Listado de Productos" onAction="#onViewProductList" styleClass="button-success"/>
            <Button fx:id="btnCreateProduct" text="Crear Nuevo Producto" onAction="#onCreateProduct" styleClass="button-primary"/>
        </HBox>
    </VBox>
</VBox>
