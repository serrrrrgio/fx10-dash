<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.fx10.controller.ProductListController"
      styleClass="view-container" VBox.vgrow="ALWAYS">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>
    <Label text="Lista de Productos" styleClass="header-label">
        <VBox.margin>
            <Insets bottom="10"/>
        </VBox.margin>
    </Label>
    <TableView fx:id="productTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colCode" text="Código" prefWidth="100"/>
            <TableColumn fx:id="colName" text="Nombre" prefWidth="200"/>
            <TableColumn fx:id="colDescription" text="Descripción" prefWidth="280"/>
            <TableColumn fx:id="colPrice" text="Precio" prefWidth="120"/>
            <TableColumn fx:id="colStock" text="Stock" prefWidth="100"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <VBox.margin>
            <Insets top="15"/>
        </VBox.margin>
        <Button text="Volver" onAction="#onBack"/>
        <HBox HBox.hgrow="ALWAYS"/>
        <Button fx:id="btnDelete" text="Eliminar Producto" onAction="#onDeleteProduct" styleClass="button-danger"/>
    </HBox>
</VBox>
